<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:padding="20dp"
        android:orientation="vertical">

        <ysn.com.library.FlowLayout
            android:id="@+id/main_activity_btn_flow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            app:fl_bg="@drawable/bg_btn_flow_layout"
            app:fl_column_space="10dp"
            app:fl_default_select="4"
            app:fl_padding_bottom="10dp"
            app:fl_padding_left="10dp"
            app:fl_padding_right="10dp"
            app:fl_padding_top="10dp"
            app:fl_row_space="10dp"
            app:fl_select_type="SINGLE_NOT_RESELECT"
            app:fl_text_color="@drawable/bg_btn_flow_layout_text_color"
            app:fl_text_size="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:background="#e6e6e6" />

        <ysn.com.library.FlowLayout
            android:id="@+id/main_activity_data_flow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            app:fl_bg="@drawable/bg_data_flow_layout"
            app:fl_column_space="10dp"
            app:fl_max_select="0"
            app:fl_padding_bottom="10dp"
            app:fl_padding_left="10dp"
            app:fl_padding_right="10dp"
            app:fl_padding_top="10dp"
            app:fl_row_space="10dp"
            app:fl_select_type="SINGLE_NOT_RESELECT"
            app:fl_text_color="@drawable/bg_data_flow_layout_text_color"
            app:fl_text_size="14sp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>